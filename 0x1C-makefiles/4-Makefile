CC = gcc
NAME = school
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all
all: $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -O $(NAME)


.PHONY: clean
Clean:
	$(RM) *~ $(NAME)


.PHONY: oclean
oclean:
	$(RM) $(OBJ)


.PHONY: fclean
fclean: clean oclean

.PHONY: re
re: oclean all
